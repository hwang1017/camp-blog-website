<%- include("../partials/header") %>


<div class="container">
	<div class="row">
		<h1>Edit Your Comment</h1>
		<form action="/campground/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg bn-default">Submit!</button>
			</div>
		</form>
		<a href="/campground/<%= campground_id %>">Go back</a>	
	</div>
</div>



<%- include("../partials/footer") %>