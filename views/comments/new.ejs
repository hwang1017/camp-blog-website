<%- include("../partials/header") %>


<div class="container">
	<div class="row">
		<h1>Add New Comment to <%= campground.name %></h1>
		<form action="/campground/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg bn-default">Submit!</button>
			</div>
		</form>
		<a href="/campground">Go back</a>	
	</div>
</div>



