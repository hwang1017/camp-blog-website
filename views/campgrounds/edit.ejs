<%- include("../partials/header") %>


<div class="container">
	<div class="row">
		<h1>Edit <%= campground.name %></h1>
		<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campground[img]" value="<%= campground.img %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg bn-default">Submit!</button>
			</div>
		</form>
		<a href="/campground/<%= campground._id %>">Go back</a>	
	</div>
</div>



<%- include("../partials/footer") %>